<%- include('partials/head.ejs') %>
<link rel="stylesheet" href="/stylesheets/indexStyles.css" />
</head>

<body class="articulos__body">


  <%- include('partials/navIndex.ejs')%>

  <div class="hero__index">
    <h2 class="hero__heading">Memo's Pinturas <i class="fa-solid fa-brush"></i></h2>
  </div>

  <section class="index__contenido" id="categoriasId">
    <h2 class="index__titulo">Memo's Pinturas</h2>
    <h3 class="index__subtitulo">Colores que inspiran, Calidad que perdura.</h3>
  </section>

  <section class="categorias">
    <h2 class="categorias__heading">Categorías de productos</h2>

    <div class="carousel-container">
      <div class="carousel">
        <div class="slide">
          <img src="/images/catAerosoles.png" alt="Aerosol" class="slide-image">
          <a href="/products/#aerosolId" class="slide-caption">
            <span>AEROSOL</span>
          </a>
        </div>
        <div class="slide">
          <img src="/images/categoriaArquitectonica.jpg" alt="Arquitectónica" class="slide-image">
          <a href="/products/#arquitectonicaId" class="slide-caption">
            <span>ARQUITECTÓNICA</span>
          </a>
        </div>
        <div class="slide">
          <img src="/images/catComplementos.jpg" alt="Complementos" class="slide-image">
          <a href="/products/#complementosId" class="slide-caption">
            <span>COMPLEMENTOS</span>
          </a>
        </div>
        <div class="slide">
          <img src="/images/catAutomotrizP.jpg" alt="Slide 4" class="slide-image">
          <a href="/products/#automotrizId" class="slide-caption">
            <span>AUTOMOTRIZ</span>
          </a>
        </div>
        <div class="slide">
          <img src="/images/catIndustrial.png" alt="Slide 5" class="slide-image">
          <a href="/products/#industrialId" class="slide-caption">
            <span>INDUSTRIAL</span>
          </a>
        </div>
        <div class="slide">
          <img src="/images/catColorantesyAdhesivos.png" alt="Slide 5" class="slide-image">
          <a href="/products/#colorantesId" class="slide-caption">
            <span>COLORANTES Y ADHESIVOS</span>
          </a>
        </div>



      </div>
  </section>
  <!-- Acaban categorías -->

  <h2 class="productos__heading" id="nuestrosProductosId">Nuestros Productos</h2>


  <!-- Empiezan Productos -->
  <section class="productos">

    <div class="contenedor">
      <h2 class="productos__subheading">
        <i class="fas fa-house"></i> Pintura Arquitectónica
      </h2>
      <div class="productos-grid">
        <% if(products && products.length > 0) { %>
        <% for (let i = 0; i < products.length; i++) { %>
        <%if (products[i].tabla_origen === "arquitectonica" ) { %>
        <!-- Producto 1 -->
        <div class="producto-card">
          <div class="producto-imagen">
            <img src=/uploads/images/<%= products[i].imagen %> alt=<%= products[i].tabla_origen %>>
          </div>

          <div class="producto-info">
            <div class="producto-detalles">
              <h3 class="producto-titulo">Pintura Arquitectónica</h3>
              <p class="producto-precio">Precio: <span>$<%= products[i].precio_venta %></span></p>
              <p class="producto-color-label">Color:<span class="producto-color-valor"><%= products[i].color_nombre %></span> </p>
              <p class="producto-capacidad">Capacidad: <span><%= products[i].cantidad_litros %> Lts</span></p>
            </div>

            <div class="color-muestra">
              <div class="color-circulo" style="background-color:<%= products[i].color_hex %>;"> </div>
            </div>
          </div>

        </div>

        <%}%>
        <%}%>
        <% } else { %>
        <p>No se encontraron productos.</p>
        <% } %>


      </div>
    </div>
  </section>

  <section class="principal__producto" id="esloganId">

    <div class="contenedor">

      <div class="principal__grid">
        <!-- Imagen del producto -->
        <div class="principal__imagen">
          <img src="/images/aerosolesImg_2.png" alt="Imagen Principal" class="imagen__principal">
        </div>

        <!-- Información del producto -->
        <div class="principal__informacion">
          <h3 class="principal__heading">Colores de calidad y duraderos</h3>
          <h4 class="principal__subheading">¡Dale color a tus ideas con nuestros aerosoles!</h4>

          <p class="principal__texto">
            Disponibles en una amplia gama de colores vibrantes y resistentes.
            Ideales para proyectos de arte, manualidades, decoración y más.
          </p>

          <ul class="principal__listado">
            <li class="principal__punto"><i class="fas fa-check"></i> Calidad</li>
            <li class="principal__punto"><i class="fas fa-check"></i> Durabilidad</li>
            <li class="principal__punto"><i class="fas fa-check"></i> Variedad</li>
          </ul>

          <!-- Sello de garantía -->
          <div class="principal__destacado">
            <i class="fas fa-award"></i> Garantía de satisfacción 100%
          </div>

          <!-- Calificación -->
          <div class="principal__calificacion">
            <i class="fas fa-star"></i> <i class="fas fa-star"></i>
            <i class="fas fa-star"></i> <i class="fas fa-star"></i>
            <i class="fas fa-star"></i>
            <span class="calificacion__texto">5.0 - ¡Clientes felices con nuestros colores!</span>
          </div>

          <!-- Botón de acción -->
          <a class="principal__boton">
            <p><i class="fas fa-box"></i> <span class="principal__span">Ver más productos</span></p>
          </a>
        </div>
      </div>
    </div>
  </section>



  <!-- Empiezan Productos -->
  <section class="productos">
    <h2 class="productos__heading"></h2>

    <div class="contenedor">
      <h2 class="productos__subheading">
        <i class="fa-solid fa-spray-can-sparkles"></i> Pintura en Aerosol
      </h2>

      <div class="productos-grid">
        <% if(products && products.length > 0) { %>
        <% for (let i = 0; i < products.length; i++) { %>
        <%if (products[i].tabla_origen === "aerosol" ) { %>
        <!-- Producto 1 -->
        <div class="producto-card">
          <div class="producto-imagen">
            <img src=/uploads/images/<%= products[i].imagen %> alt=<%= products[i].tabla_origen %>>
          </div>

          <div class="producto-info">
            <div class="producto-detalles">
              <h3 class="producto-titulo">Pintura Aerosol</h3>
              <p class="producto-precio">Precio: <span>$<%= products[i].precio_venta %></span></p>
              <p class="producto-color-label">Color:<span class="producto-color-valor"><%= products[i].color_nombre %></span> </p>
              <p class="producto-capacidad">Capacidad: <span><%= products[i].cantidad_litros %> Lts</span></p>
            </div>

            <div class="color-muestra">
              <div class="color-circulo" style="background-color:<%= products[i].color_hex %>;"> </div>
            </div>
          </div>

        </div>

        <%}%>
          <%}%>
        <% } else { %>
        <p>No se encontraron productos.</p>
        <% } %>

      </div>
    </div>
  </section>


  <!-- Empieza Sección de Combinaciones -->
  <section class="combinaciones" id="combinacionesId">
    <h2 class="combinaciones__heading">Mejores Combinaciones</h2>
    <div class="contenedor">
      <h2 class="combinaciones__titulo">Inspiración para tu hogar</h2>
      <div class="paletas">

        <div class="paletas__grid">

          <!-- Tarjeta -->
          <div class="paletas__tarjeta">
            <div class="paletas__imagen-contenedor">

              <img src="/images/combinacion1.jpg" alt="Combinación 1" class="paletas__imagen">

            </div>
            <div class="paletas__contenido">
              <h3 class="paletas__titulo">Elegancia fresca con pared verde menta.</h3>
              <div class="paletas__boton-contenedor">

              </div>
            </div>
          </div>
          <!-- Finaliza Tarjeta -->

          <!-- Tarjeta -->
          <div class="paletas__tarjeta">
            <div class="paletas__imagen-contenedor">

              <img src="/images/combinacion2.jpg" alt="Combinación 2" class="paletas__imagen">

            </div>
            <div class="paletas__contenido">
              <h3 class="paletas__titulo">Mate y gris en cada rincon de tu sala.</h3>
              <div class="paletas__boton-contenedor">

              </div>
            </div>
          </div>
          <!-- Finaliza Tarjeta -->

          <!-- Tarjeta -->
          <div class="paletas__tarjeta">
            <div class="paletas__imagen-contenedor">

              <img src="/images/combinacion3.jpg" alt="Combinación 2" class="paletas__imagen">

            </div>
            <div class="paletas__contenido">
              <h3 class="paletas__titulo">Serenidad y estilo en tonos azules y grises.</h3>
              <div class="paletas__boton-contenedor">

              </div>
            </div>
          </div>
          <!-- Finaliza Tarjeta -->

          <!-- Tarjeta -->
          <div class="paletas__tarjeta">
            <div class="paletas__imagen-contenedor">

              <img src="/images/combinacion4.jpg" alt="Combinación 2" class="paletas__imagen">

            </div>
            <div class="paletas__contenido">
              <h3 class="paletas__titulo">Tu recámara, envuelta en grises claros y oscuros.</h3>
              <div class="paletas__boton-contenedor">

              </div>
            </div>
          </div>
          <!-- Finaliza Tarjeta -->

        </div>
      </div>
    </div>
  </section>

  <!-- Sección de colores populares -->
  <section class="colores__section" id="coloresId">
    <h2 class="carrusel__galeria-heading">Colores Populares</h2>

    <div class="contenedor">
      <h2 class="carrusel__galeria-titulo">Selección de colores más utilizados</h2>
      <div class="colores__grid">
        <!-- Tarjeta de color 1 -->
        <div class="color__tarjeta">
          <div class="color__muestra" style="background-color: var(--rojoPrimario)"></div>
