<%- include('partials/head.ejs') %>
  <style>
    body {
      font-family: system-ui, -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, 'Open Sans', 'Helvetica Neue', sans-serif;
      background-color: #f5f5f5;
      color: #333;
      display: flex;
      justify-content: center;
      align-items: center;
      height: 100vh;
      margin: 0;
      padding: 0 1rem;
    }

    .error-container {
      max-width: 500px;
      text-align: center;
      background-color: white;
      border-radius: 8px;
      padding: 2rem;
      box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
    }

    .error-code {
      font-size: 6rem;
      font-weight: bold;
      margin: 0;
      color: #e53e3e;
    }

    .error-title {
      font-size: 1.5rem;
      margin: 1rem 0;
    }

    .error-message {
      color: #666;
      margin-bottom: 2rem;
    }

    .back-button {
      display: inline-block;
      background-color: #3182ce;
      color: white;
      padding: 0.75rem 1.5rem;
      border-radius: 4px;
      text-decoration: none;
      font-weight: 500;
      transition: background-color 0.2s;
    }

    .back-button:hover {
      background-color: #2c5282;
    }
  </style>
</head>

<body>
  <div class="error-container">
    <h1 class="error-code">404</h1>
    <h2 class="error-title">Error, Página no encontrada</h2>
    <p class="error-message">
      No hemos encontrado esta página, regresa a nuestrea pagina principal.
    </p>
    <a href="/" class="back-button">Regresar al inicio</a>
  </div>
</body>