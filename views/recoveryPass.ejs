<%- include('partials/head.ejs') %>
<link rel="stylesheet" href="/stylesheets/loginStyles.css" />
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />
</head>

<body>
  <div class="login-container">

    <section class="contenedor recuperar" id="sectionRecuperar">

      <div class="card">
        <div class="card-header">
          <h1 class="heading__formulario">Recuperar Contraseña</h1>
        </div>

        <div class="card-body">
          <form class="formulario__login" id="formularioRecuperacion" method="post" action="/login/recoveryPass">
            <p class="recovery-text">Ingresa tu correo electrónico y te enviaremos instrucciones para restablecer tu
              contraseña.</p>

            <div class="form-group">
              <div class="input-container">
                <i class="fa-solid fa-envelope"></i>
                <input type="email" class="input__formulario input__formulario-correo" placeholder="Correo electrónico"
                  id="inputContraseña" name="email">
              </div>
            </div>

            <button type="submit" class="submit__formulario" id="recuperarContraseña">
              <i class="fa-solid fa-key"></i> Recuperar Contraseña
            </button>

            <div class="back-link">
              <a href="/login" class="volver-link">
                <i class="fa-solid fa-arrow-left"></i> Regresar
              </a>
            </div>
          </form>
        </div>
      </div>

    </section>
  </div>

  <!-- SweetAlert2 -->
  <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
  <script src="/javascripts/appRecoveryPass.js"></script>
  <script>
    var successMessage = "<%= typeof successMessage !== 'undefined' ? successMessage : '' %>";
    var errorMessage = "<%= typeof errorMessage !== 'undefined' ? errorMessage : '' %>";
  </script>
</body>

</html>