<%- include('partials/head.ejs') %>
<link rel="stylesheet" href="/stylesheets/style.css" />
</head>

<body>
  <section class="contenedor recuperar" id="sectionRecuperar">
    <h2 class="heading__login">¿Olvidaste tu contraseña?</h2>

    <form class="formulario__login" id="formularioRecuperacion" method="post" action="/login/recoveryPass">
      <h1 class="heading__formulario">Recuperar Contraseña</h1>

      <input type="email" class="input__formulario input__formulario-correo" placeholder="Correo electrónico" id="inputContraseña" name="email">
      <input type="submit" class="submit__formulario" value="Recuperar Contraseña" id="recuperarContraseña">

      <a href="/login" class="enlace__formulario">Regresar</a>
    </form>

    <div class="imagen__login">
      <img src="/images/journey-logo.png" alt="Logo Journey" class="journey__imagen">

    </div>
  </section>

  <!-- SweetAlert2 -->
  <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
  <script src="/javascripts/appRecoveryPass.js"></script>
  <script>
    var successMessage = "<%= typeof successMessage !== 'undefined' ? successMessage : '' %>";
    var errorMessage = "<%= typeof errorMessage !== 'undefined' ? errorMessage : '' %>";
  </script>

</body>

</html>