<div class="menu__desplegable" id="menuDesplegable">

  <div class="usuario__informacion">
    <% if (typeof data !== "undefined" && data) { %>
    <p class="usuario__saludo">¡Hola <%= data.user %>!</p>
    <% } else { %>
    <p class="usuario__saludo">¡Hola Invitado!</p>
    <% } %>

  </div>
  <div class="usuario__configuracion">
    <a href="/admin/account" class="usuario__icono">
      <div class="usuario__icono">
        <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
          <circle cx="12" cy="8" r="5"></circle>
          <path d="M20 21a8 8 0 0 0-16 0"></path>
        </svg>
      </div>
      <span><a href="/admin/account" class="usuario__item  ">Configuración de cuenta</a></span>
    </a>
  </div>


  <div class="menu__linea"></div>

  <!-- Inician opciones -->
  <div class="menu__contenido ">

    <div class="menu__item">
      <a href="/admin" class="menu__texto">
        <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 100 100" width="100" height="100" stroke="black" fill="none" stroke-width="5">
          <line x1="0" y1="50" x2="100" y2="50" />
          <line x1="50" y1="0" x2="50" y2="100" />
          <rect x="0" y="0" width="100" height="100" stroke-width="15" />
        </svg>
        <span class="menu__enlace">Panel</span>
      </a>
    </div>

    <div class="menu__item">
      <a href="/admin/products" class="menu__texto">
        <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
          <path d="M21 16V8a2 2 0 0 0-1-1.73l-7-4a2 2 0 0 0-2 0l-7 4A2 2 0 0 0 3 8v8a2 2 0 0 0 1 1.73l7 4a2 2 0 0 0 2 0l7-4A2 2 0 0 0 21 16z"></path>
        </svg>

        <span class="menu__enlace">Productos</span>
      </a>
    </div>

    <div class="menu__item">
      <a href="/admin/sales" class="menu__texto">
        <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
          <circle cx="12" cy="12" r="10"></circle>
          <line x1="12" y1="8" x2="12" y2="16"></line>
          <line x1="8" y1="12" x2="16" y2="12"></line>
        </svg>
        <span class="menu__enlace">Vender</span>
      </a>
    </div>

    <div class="menu__item">
      <a href="/admin/history" class="menu__texto">
        <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
          <rect x="3" y="4" width="18" height="18" rx="2" ry="2"></rect>
          <line x1="16" y1="2" x2="16" y2="6"></line>
          <line x1="8" y1="2" x2="8" y2="6"></line>
          <line x1="3" y1="10" x2="21" y2="10"></line>
        </svg>
        <span class="menu__enlace">Historial</span>
      </a>
    </div>

    <div class="menu__item">
      <a href="/logout" class="menu__texto">
        <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
          <path d="M9 21H5a2 2 0 0 1-2-2V5a2 2 0 0 1 2-2h4"></path>
          <polyline points="16 17 21 12 16 7"></polyline>
          <line x1="21" y1="12" x2="9" y2="12"></line>
        </svg>
        <span class="menu__enlace">Cerrar Sesión</span>
      </a>
    </div>

    <div class="menu__linea linea__final"></div>

    <div class="menu__item menu__usuarios">
      <a href="/users" class="menu__texto">
        <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
          <path d="M17 21v-2a4 4 0 0 0-4-4H5a4 4 0 0 0-4 4v2"></path>
          <circle cx="9" cy="7" r="4"></circle>
          <path d="M23 21v-2a4 4 0 0 0-3-3.87"></path>
          <path d="M16 3.13a4 4 0 0 1 0 7.75"></path>
        </svg>
        <span class="menu__enlace">Trabajadores</span>
      </a>
    </div>



