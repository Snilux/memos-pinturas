<%- include('partials/head.ejs') %>

<body>
  <img src="/images/journey-logo.png" alt="imagen Logo" id="imagenInicio" />
  <section class="contenedor login" id="sectionFormulario">
    <h2 class="heading__login">¡Hola de nuevo!</h2>

    <form class="formulario__login" id="formularioLogin" method="post" action="/auth/login">
      <h1 class="heading__formulario">Iniciar Sesión</h1>

      <input type="text" class="input__formulario" placeholder="Nombre de Usuario" id="user" name="user"  />
      <input type="password" class="input__formulario" placeholder="Contraseña" id="password" name="password"  />


      <input type="submit" class="submit__formulario" value="Iniciar Sesión" id="submitLogin" />

      <a href="/recoveryPass" class="enlace__formulario">¿Olvidaste tu contraseña?</a>
    </form>

    <div class="imagen__login">
      <img src="/images/journey-logo.png" alt="Logo Journey" class="journey__imagen" />
    </div>
  </section>

  <!-- SweetAlert2 -->
  <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
  <script src="/javascripts/appLogin.js"></script>
</body>

</html>