<%- include('../../partials/head.ejs') %>
<script src="https://cdn.tailwindcss.com"></script>
<link rel="stylesheet" href="/stylesheets/panelAdministrarion.css">
<link rel="stylesheet" href="/stylesheets/userStyles.css">
</head>

<body>
    <%- include('../../partials/navAdmin.ejs') %>
    <%- include('../../partials/dropdownMenu.ejs') %>

    <div class="main-content">
        <div class="page-header">
            <h1><i class="fas fa-user-cog"></i> Configuración de Cuenta</h1>
        </div>

        <section class="contenedor form-container">
            <div class="header-actions">
                <h2 class="form-title"><i class="fas fa-user"></i> Datos de Usuario</h2>
            </div>

            <form class="formulario">
                <div class="campo">
                    <label for="inputNombre"><i class="fas fa-user"></i> Nombre</label>
                    <div class="input-container">
                        <input type="text" class="input-field" id="inputNombre" name="nombre" readonly
                            value="<%= data.user %>">
                    </div>
                </div>

                <div class="campo">
                    <label for="inputEmail"><i class="fas fa-envelope"></i> Email</label>
                    <div class="input-container">
                        <input type="email" class="input-field" id="inputEmail" name="email" readonly
                            value="<%= data.email %>">
                    </div>
                </div>

                <div class="campo">
                    <label for="inputPassword"><i class="fas fa-lock"></i> Contraseña</label>
                    <div class="input-container">
                        <input type="text" class="input-field" id="inputPassword" readonly value="<%= data.pass %>">
                    </div>
                </div>

                <div class="campo">
                    <label for="inputRol"><i class="fas fa-user-tag"></i> Rol</label>
                    <div class="input-container">
                        <input type="text" class="input-field" id="inputRol" name="rol" readonly value="<%=data.rol %>">
                    </div>
                </div>

                <div class="botones">
                    <a href="/admin" class="btn btn-cancelar"><i class="fas fa-arrow-left"></i> Volver</a>
                </div>
            </form>
        </section>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script>
        function activarMenu() {
            document.getElementById("menuDesplegable").classList.toggle("active");
            document.querySelector(".menu").classList.toggle("active");
        }
    </script>
</body>

</html>