<%- include('../../partials/head.ejs') %>
<link rel="stylesheet" href="/stylesheets/panelAdministrarion.css">
<link rel="stylesheet" href="/stylesheets/userStyles.css">
</head>

<body>
  <%- include('../../partials/navAdmin.ejs') %>
  <%- include('../../partials/dropdownMenu.ejs') %>

  <section class="contenedor login" id="sectionFormulario">
    <h2 class="heading__login">Journey</h2>
    <form class="formulario__login" id="formularioLogin" method="post" action="/admin/providers/save/<%= provider.id_proveedor %>">
      <h1 class="heading__formulario">Añadir Proveedor</h1>
      <input type="text" class="input__formulario" placeholder="Nombre de la empresa " id="inputEmpresa" name="nombre_empresa" value="<%= provider.nombre_empresa %>">
      <input type="text" class="input__formulario" placeholder="Telefono " id="inputTelefono" name="telefono" value="<%= provider.telefono %>">
      <input type="text" class="input__formulario" placeholder="Correo electronico" id="inputCorreo" name="email" value="<%= provider.email %>">
      <input type="submit" class="submit__formulario" value="Guardar" id="submitAñadir">
      <a href="/admin/providers" class="submit__formulario">Volver</a>
    </form>

  </section>

  <script src="/javascripts/appAdminProviders.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
  <script>
    var errorMessage =
      "<%= typeof errorMessage !== 'undefined' ? errorMessage : '' %>";
    var successMessage =
      "<%= typeof successMessage !== 'undefined' ? successMessage : '' %>";
  </script>
</body>

</html>