</head>

<body>
  <%- include('../../partials/navAdmin.ejs') %>
  <%- include('../../partials/dropdownMenu.ejs') %>
  <section class="contenedor login" id="sectionFormulario">
    <h2 class="heading__login">Journey</h2>
    <form class="formulario__login" id="formularioLogin" action="/admin/lots/add " method="post">
      <h1 class="heading__formulario">Añadir Lote</h1>
      <input type="text" class="input__formulario" placeholder="Proveedor" id="inputProveedor" name="nombre_empresa">
      <input type="date" class="input__formulario" placeholder="Fecha Llegada" id="inputFechaLegada" name="fecha_llegada">
      <input type="date" class="input__formulario" placeholder="Fecha Caducidad" id="inputFechaCaducidad" name="fecha_caducidad">
      <textarea class="input__formulario" placeholder="Descripcion" id="Descripcion" name="descripcion"></textarea>
      <input type="submit" class="submit__formulario" value="Añadir" id="submitAñadir">

    </form>

    <script src="/javascripts/appAdminProviders.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script>
      var errorMessage =
        "<%= typeof errorMessage !== 'undefined' ? errorMessage : '' %>";
      var successMessage =
        "<%= typeof successMessage !== 'undefined' ? successMessage : '' %>";
    </script>
</body>

</html>