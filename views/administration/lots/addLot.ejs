<%- include('../../partials/head.ejs') %>
<link rel="stylesheet" href="/stylesheets/panelAdministrarion.css">
<link rel="stylesheet" href="/stylesheets/userStyles.css">
</head>

<body>
  <%- include('../../partials/navAdmin.ejs') %>
  <%- include('../../partials/dropdownMenu.ejs') %>

  <div class="main-content">
    <div class="page-header">
      <h1><i class="fas fa-truck-loading"></i> Gestión de Lotes</h1>
    </div>

    <section class="contenedor form-container">
      <div class="header-actions">
        <h2 class="form-title"><i class="fas fa-plus-circle"></i> Añadir Nuevo Lote</h2>
      </div>

      <form class="formulario" id="formularioLogin" method="post" action="/admin/lots/add">
        <div class="campo">
          <label for="inputProveedor"><i class="fas fa-building"></i> Proveedor</label>
          <div class="input-container">
            <input type="text" class="input-field" placeholder="Nombre del proveedor" id="inputProveedor"
              name="nombre_empresa" required>
          </div>
        </div>

        <div class="campo">
          <label for="inputFechaLegada"><i class="fas fa-calendar-alt"></i> Fecha de Llegada</label>
          <div class="input-container">
            <input type="date" class="input-field" id="inputFechaLegada" name="fecha_llegada" required>
          </div>
        </div>

        <div class="campo">
          <label for="inputFechaCaducidad"><i class="fas fa-calendar-times"></i> Fecha de Caducidad</label>
          <div class="input-container">
            <input type="date" class="input-field" id="inputFechaCaducidad" name="fecha_caducidad" required>
          </div>
        </div>

        <div class="campo campo-completo">
          <label for="Descripcion"><i class="fas fa-align-left"></i> Descripción</label>
          <div class="input-container">
            <textarea class="input-field" placeholder="Descripción detallada del lote" id="Descripcion"
              name="descripcion" rows="4"></textarea>
          </div>
        </div>

        <div class="botones">
          <a href="/admin/lots" class="btn btn-cancelar"><i class="fas fa-times"></i> Cancelar</a>
          <button type="submit" class="btn btn-guardar" id="submitAñadir"><i class="fas fa-save"></i> Guardar
            Lote</button>
        </div>
      </form>
    </section>
  </div>





  <script src="/javascripts/appAdminLots.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
  <script>
    var errorMessage =
      "<%= typeof errorMessage !== 'undefined' ? errorMessage : '' %>";
    var successMessage =
      "<%= typeof successMessage !== 'undefined' ? successMessage : '' %>";
  </script>
</body>

</html>