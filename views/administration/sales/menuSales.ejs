<%- include('../../partials/head.ejs') %>
<link rel="stylesheet" href="/stylesheets/panelAdministrarion.css">
<link rel="stylesheet" href="/stylesheets/products/showProducts.css">
<style>

</style>
</head>

<body>
    <%- include('../../partials/navAdmin.ejs') %>
    <%- include('../../partials/dropdownMenu.ejs') %>

    <section class="productos-section pos-section">
        <div class="productos-container pos-container">
            <div class="section-header">
                <h2 class="section-title">Sistema de Punto de Venta</h2>
            </div>

            <div class="pos-layout">
                <!-- Search Bar -->
                <!-- <div class="search-bar-container">
                    <div class="search__contenedor pos-search">
                        <form>
                            <input type="text" id="search-input" class="input__search"
                                placeholder="Buscar producto por nombre o código...">
                        </form>
                    </div>
                    <button class="btn-accion btn-editar add-product-btn">
                        <i class="fa-solid fa-plus"></i> Agregar
                    </button>
                </div> -->

                <div class="pos-main-content">
                    <!-- Product List Panel -->
                    <div class="producto-card product-list-card">
                        <div class="producto-header">
                            <h3 class="producto-nombre padding">
                                <i class="fa-solid fa-cart-shopping"></i> PRODUCTOS EN VENTA
                            </h3>
                        </div>

                        <div class="producto-content table-container">
                            <table id="sale-items" class="products-table">
                                <thead>
                                    <tr>
                                        <th>Cant.</th>
                                        <th>Descripción</th>
                                        <th>P. Unit.</th>
                                        <th>Importe</th>
                                        <th></th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <!-- Table rows will be dynamically added here -->
                                </tbody>
                            </table>
                        </div>
                    </div>

                    <!-- Sidebar -->
                    <div class="pos-sidebar">
                        <!-- Sale Summary -->
                        <div class="producto-card summary-card">
                            <div class="producto-header">
                                <h3 class="producto-nombre padding">
                                    <i class="fa-solid fa-receipt"></i> DATOS DE LA VENTA
                                </h3>
                            </div>

                            <div class="producto-content">
                                <div class="total-price-container">
                                    <span class="total-label">PRECIO TOTAL:</span>
                                    <span class="total-value" id="total-price">$0.00</span>
                                </div>

                                <div class="summary-divider"></div>

                                <div class="summary-item">
                                    <span class="info-label">TOTAL DE PRODUCTOS:</span>
                                    <span class="info-value" id="total-items">3</span>
                                </div>
                            </div>
                        </div>

                        <!-- Action Buttons -->
                        <div class="producto-card actions-card">
                            <div class="producto-header">
                                <h3 class="producto-nombre padding">
                                    <i class="fa-solid fa-gear"></i> OPCIONES
                                </h3>
                            </div>

                            <div class="producto-accion pos-actions">
                                <button id="sale" class="btn-accion btn-editar">
                                    <i class="fa-solid fa-cash-register"></i> Cobrar / Finalizar Venta
                                </button>
                                <a href="/admin/sales" class="btn-accion btn-eliminar">
                                    <i class="fa-solid fa-ban"></i> Cancelar Venta
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <style>
        /* POS specific styles */
        .pos-section {
            padding-top: 40px;
        }

        .pos-layout {
            display: flex;
            flex-direction: column;
            gap: 24px;
        }

        .search-bar-container {
            display: flex;
            gap: 16px;
            align-items: center;
            background-color: var(--white);
            padding: 16px;
            border-radius: var(--border-radius);
            box-shadow: var(--shadow);
        }

        .pos-search {
            flex-grow: 1;
        }

        .add-product-btn {
            min-width: 120px;
        }

        .pos-main-content {
            display: grid;
            grid-template-columns: 2fr 1fr;
            gap: 24px;
        }

        .product-list-card {
            height: auto;
        }

        .table-container {
            overflow-x: auto;
        }

        .products-table {
            width: 100%;
            border-collapse: collapse;
        }

        .products-table th {
            background-color: var(--primary-light);
            color: var(--primary-color);
            font-weight: 600;
            text-align: left;
            padding: 12px;
            font-size: 14px;
        }

        .products-table td {
            padding: 12px;
            border-bottom: 1px solid var(--border-color);
            font-size: 14px;
        }

        .pos-sidebar {
            display: flex;
            flex-direction: column;
            gap: 24px;
        }

        .summary-card .producto-content {
            padding: 16px;
        }

        .total-price-container {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 16px;
        }

        .total-label {
            font-size: 16px;
            font-weight: 600;
            color: var(--text-color);
        }

        .total-value {
            font-size: 24px;
            font-weight: 700;
            color: var(--primary-color);
        }

        .summary-divider {
            height: 1px;
            background-color: var(--border-color);
            margin-bottom: 16px;
        }

        .summary-item {
            display: flex;
            justify-content: space-between;
            align-items: center;
        }

        .pos-actions {
            display: flex;
            flex-direction: column;
            grid-template-columns: 1fr;
        }

        .pos-actions .btn-accion {
            margin-bottom: 8px;
        }

        @media (max-width: 992px) {
            .pos-main-content {
                grid-template-columns: 1fr;
            }
        }

        @media (max-width: 768px) {
            .search-bar-container {
                flex-direction: column;
                align-items: stretch;
            }

            .add-product-btn {
                width: 100%;
            }
        }

        .padding {
            padding: 2rem;
            text-align: center;
        }
    </style>


    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script src="/javascripts/sales/appAdminSales.js"></script>
    <script src="/socket.io/socket.io.js"></script>
</body>

</html>